{
    "icon": "drag-horizontal",
    "global": {
        "js": ["gpios.service.js", "gpios.components.js"],
        "css": ["gpios.components.css"]
    },
    "config": {
        "js": ["gpios.config.js"],
        "html": ["gpios.config.html", "gpio.dialog.html"]
    },
    "widgets": {
        "gpio" : {
            "header": {
                "icon": "video-input-component"
            },
            "content": {
                "layout": {
                    "align": "center center"
                },
                "items": [
                    {
                        "icon": "circle",
                        "style": "md-accent icon-lg",
                        "condition": {
                            "attr": "on",
                            "operator": "===",
                            "value": true
                        }
                    },
                    {
                        "icon": "circle-outline",
                        "condition": {
                            "attr": "on",
                            "operator": "===",
                            "value": false
                        }
                    },
                    {
                        "attr": "on",
                        "trueLabel": "ON",
                        "falseLabel": "OFF"
                    }
                ]
            },
            "footer": [
                {
                    "type": "text",
                    "icon": "cog",
                    "attr": "subtype",
                    "tooltip": "Gpio mode"
                }
            ]
        }
    }
}
